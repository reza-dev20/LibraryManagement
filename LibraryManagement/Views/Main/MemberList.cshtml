@model IEnumerable<DataLayer.Model.Member>
@using LibraryManagement.Models
<div class="spacer" style="clear: both;"></div>
<div style="text-align:center">
    @{
        if (Session[Sessions.USEREXIST.ToString()] != null)
        {
            @Html.ValidationMessageFor(m => m.FirstOrDefault().MemberId, Session[Sessions.USEREXIST.ToString()].ToString(), new { @class = "txt-success" });
            Session[Sessions.USEREXIST.ToString()] = null;
        }
        else if (Session[Sessions.OPERATION_RESULT.ToString()] != null)
        {
            @Html.ValidationMessageFor(m => m.FirstOrDefault().MemberId, Session[Sessions.OPERATION_RESULT.ToString()].ToString(), new { @class = "txt-success" });
            Session[Sessions.OPERATION_RESULT.ToString()] = null;
        }
    }
    <br />
</div>

<div class="table-parent" style="overflow: auto;">
    <div>
        @*@Html.Partial("~/Views/Shared/_PartialSearchbox.cshtml")*@
        <div class="topnav">
            <div class="search-container">
                <form>
                    <input type="text" placeholder="جستجو..." name="search" id="member-Searchbox">                    
                </form>
            </div>
        </div>
    </div>
    <table class="table" id="tblMemberList">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayName("ویرایش")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="td-id" style="display:none;">
                    @Html.DisplayFor(modelItem => item.MemberId)
                </td>
                <td class="td-name">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="td-family">
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td class="td-nationalcode">
                    @Html.DisplayFor(modelItem => item.NationalCode)
                </td>
                <td class="td-mobile">
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td class="td-date">
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    <a class="btnEditMember btnEdit">ویرایش</a> |
                    <a class="btnDeleteMember btnEdit">حذف</a>
                </td>
            </tr>
        }
    </table>
</div>
